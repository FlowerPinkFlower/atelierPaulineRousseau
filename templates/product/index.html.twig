{% extends 'base.html.twig' %}

{% block title %}Produits{% endblock %}

{% block body %}
<h1>Produits</h1>

<a class="btn btn-warning" href="{{path('new_prod')}}">Créer</a>
    <div class="container">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th class="text-center" scope="col">Nom</th>
                    <th class="text-center" scope="col">Description</th>
                    <th class="text-center" scope="col">Quantité</th>
                    <th class="text-center" scope="col">Prix unitaire</th>
                </tr>
            </thead>
            <tbody>
                    {% for prod in products %}
                        <tr>
                            <td class="text-center" scope="col">{{prod.name}}</td>
                            <td class="text-center" scope="col">{{prod.description}}</td>
                            <td class="text-center" scope="col">{{prod.quantity}}</td>
                            <td class="text-center" scope="col">{{prod.unitprice}}</td>
                            </td>
                            <td>
                                <a class="btn btn-info" href="{{path('update_prod', {'id':prod.id} )}}">Modifier</a>
                                <a class="btn btn-info" href="{{path('delete_prod', {'id':prod.id} ) }}">Supprimer</a>
                        </tr>
                    {% endfor %}
            </tbody>
        </table>
    </div>


{% endblock %}