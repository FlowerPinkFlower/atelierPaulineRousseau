{% block title %}BRACELETS{% endblock %}

{% block body %}
<section class="header_product">
        <div class="text-box">
            <h1>BRACELETS</h1></br>
            <a href="#" class="hero-btn">Venez découvrir notre marque</a>
        </div>
</section>

    <div class="container">
       <section class="product-list">
                    {% for brac in bracelet %}
                    <div class="card">

                        {% for image in brac.pictures %}
                            {# <pre>
                                {{ dump(image.name) }}
