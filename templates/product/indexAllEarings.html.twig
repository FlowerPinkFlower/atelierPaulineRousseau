{% extends 'base.html.twig' %}

{% block title %}BOUCLES D'OREILLES{% endblock %}

{% block body %}
<section class="header_product">
        <div class="text-box">
            <h1>BOUCLE D'OREILLES</h1></br></br>
        </div>
</section>

    <div class="container">
       <section class="product-list">
                    {% for bou in earing %}
                    <div class="card">
                        <div class="image"> <img src="{{asset("uploads/" ~ bou.photo)}}" alt="bijoux"> </div> 
                        <div class="title">{{bou.name}}</div>
                        <div class="text">{{bou.unitprice}}€</div>
                        {# <a class="buy-now" href="#">Ajouter au panier</a> #}
                        <a class="buy-now" href="{{path('earing', {'id': bou.id} )}}">Voir produit</a>
                    </div>


                    {% endfor %}
        </section>

    </div>
{% endblock %}







