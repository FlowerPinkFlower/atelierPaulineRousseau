{# VERSION TABLEAU #}
{% extends 'base.html.twig' %}

{% block title %}{{bracelet.name}}{% endblock %}

{% block body %}

<div class="car-wrapper">
    <div class="car">
        <div class="product-imgs">
            <div class="img-display">
                <div class="img-showcase">
                    <img src="{{asset ("/uploads/" ~ bracelet.photo)}}" alt="bijoux"></img>
                </div>
            </div>
            
        </div>

        <div class="product-content">
            <h2 class="product-title">{{bracelet.name}}</h2>
            <div class="product-price">
                <p class="new-price"><span>{{bracelet.unitprice}}€</span></p>
            </div>

             <div class="purchase-info"></div>


            
             <div class="product-detail">
                <h2>Description</h2>
                <ul>
                    <li>Article fait main</li>
                    <li>{{bracelet.description}}</li>
                </ul>
                <h2>Détail</h2>
                
                <ul>
                    <li>{{bracelet.material}}</li>
                    <li>{{bracelet.diameter}}</li>
                    <li>{{bracelet.weight}}</li>
                    <li>{{bracelet.gilding}}</li>
                    <li>{{bracelet.chainLength}}</li>
                </ul>
            </div>

            <button class="buy-now-product" href="{{asset('https://www.etsy.com/fr/shop/AtelierPaulineR')}}">Acheter produit</button>

        </div>

    </div>
</div>




{% endblock %}