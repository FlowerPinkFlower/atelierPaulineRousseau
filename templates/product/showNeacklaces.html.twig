{% extends 'base.html.twig' %}

{% block title %}{{necklace.name}}{% endblock %}

{% block body %}

<div class="car-wrapper">
    <div class="car">
        <div class="product-imgs">
            <div class="img-display">
                <div class="img-showcase">
                    <img src="{{asset("/uploads/" ~ necklace.photo)}}"></img>
                </div>
            </div>
        </div>

        <div class="product-content">
            <h2 class="product-title">{{necklace.name}}</h2>
            
            
            <div class="product-price">
                <!-- <p class="last-price">Ancien prix: <span>37€</span></p> -->
                <p class="new-price"><span>{{necklace.unitprice}}€</span></p>
            </div>
            
            <div class="product-detail">
                <h2>Description</h2>
                {# <p>Boucles d'oreilles marbré</p> #}
                <ul>
                    <li>Article fait main</li>
                    <li>{{necklace.description}}</li>
                </ul>
                <h2>Détail</h2>
                {# <p>Boucles d'oreilles marbré</p> #}
                <ul>
                    <li>{{necklace.material}}</li>
                    <li>{{necklace.diameter}}</li>
                    <li>{{necklace.weight}}</li>
                    <li>{{necklace.gilding}}</li>
                    <li>{{necklace.chainLength}}</li>
                </ul>
            </div>

            {# <div class="social-links">
                <a href="https://www.etsy.com/fr/shop/AtelierPaulineR"></a>
                <a href="https://www.instagram.com/atelier.pauline_bijoux/"></a> 
            </div> #}

        </div>
            <a class="buy-now-product" href="{{asset('https://www.etsy.com/fr/shop/AtelierPaulineR')}}">Acheter produit</a>

    </div>
</div>



{% endblock %}