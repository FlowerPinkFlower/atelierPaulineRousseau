{% extends 'base.html.twig' %}

{% block title %}S'enregistrer{% endblock %}

{% block body %}
<section class="connection">
<h2>Inscription</h2>
 <section>
    <div class="container">
        <!-- SE CONNECTER -->
        <div class="user signinBx">
            <div class="imgBx"><img src="https://louyetu.fr/wp/wp-content/uploads/2019/11/manif2-1910x0.jpeg" ></div>
            <div class="formBx">
                    <form method="post">
                        <h1 class="h3 mb-3 font-weight-normal">Pauline Rousseau</h1>
                        <h1 class="h3 mb-3 font-weight-normal">Atelier</h1>
                    {{ form_start(registrationForm) }}
                            {{ form_row(registrationForm.lastname, {
                                label:'Nom'
                            }) }}
                            {{ form_row(registrationForm.firstname, {
                                label:'Prénom'
                            }) }}
                            {{ form_row(registrationForm.email) }}
                            {{ form_row(registrationForm.plainPassword, {
                                label: 'Mot de passe'
                            }) }}
                            {{ form_row(registrationForm.agreeTerms, {
                                label: "J'accepte les conditions"
                            }) }}

                            <button type="submit" class="btn btn-primary">S'enregistrer</button>
                        {{ form_end(registrationForm) }}
                </form>
            </div>
        </div>
</section>


