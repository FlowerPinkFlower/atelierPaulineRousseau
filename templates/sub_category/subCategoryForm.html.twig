{% extends "base.html.twig" %}

{% block title %}FORMULAIRE SOUS CATEGORIE{% endblock %}


{% block body %}
<h1>formulaire sous-catégorie</h1>
    {{ form_start(formsubCate) }}

        {{ form_row(formsubCate.name, {'label':"Nom", 'attr': {placeholder:"Entrer le nom de la sous catégorie"} } ) }}
        {{ form_row(formsubCate.category, {'label':"Categorie", 'attr': {placeholder:"Entrer la categorie"} }) }}
        {{ form_row(formsubCate.description, {'label':"Description", 'attr': {placeholder:"Entrer la description de la sous catégorie"} }) }}

        {# <td class="text-center" scope="col">{{subCategory.category}}</td> #}

        {% if mode %}
            <button type="submit" class="buy-now"> Modifier une sous catégorie</button>  
        {% else %}
            <button type="submit" class="buy-now"> Créer une sous catégorie </button> 
        {% endif %}

    {{ form_end(formsubCate) }}
    
{% endblock %}