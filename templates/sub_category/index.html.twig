{% extends 'base.html.twig' %}

{% block title %}Sous categorie{% endblock %}

{% block body %}

<h1>Sous categorie</h1>

<a class="btn btn-success" href="{{path('new_subCate')}}" >Cr√©er</a>
    <div class="container">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th class="text-center" scope="col">Nom sous categorie</th>
                    <th class="text-center" scope="col">Description sous categorie</th>
                </tr>
            </thead>
            <tbody>
                    {% for subCategory in subCate %}
                        <tr>
