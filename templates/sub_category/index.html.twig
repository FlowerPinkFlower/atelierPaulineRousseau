                            <td>
                                <a href="{{path('delete_SubCate', {'id': subCategory.id})}}" class="btn btn-warning">Supprimer</a>
                                <a href="{{path('update_subCate', {'id': subCategory.id})}}" class="btn btn-warning">Modifier</a>
                            </td>
                        </tr>
                    {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}